local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library//main/Library", true))()

local window = library:AddWindow("Test1", {
	main_color = Color3.fromRGB(41, 74, 122), -- Color
	min_size = Vector2.new(650, 606), -- Size of the gui
	can_resize = false, -- true or false
})

local Killing = window:AddTab("Killing")

local switch = Killing:AddSwitch("Kill Aura", function(state)
    if state then
        _G.autoPunchanim = true 
        local player = game.Players.LocalPlayer
        local playerName = player.Name

        -- Find the Punch tool in the Backpack or Workspace (equipped in hand)
        local punchTool =
            player.Backpack:FindFirstChild("Punch") or
            game.Workspace:FindFirstChild(playerName):FindFirstChild("Punch")

        -- Equip the Punch tool to the hand if not already equipped
        if punchTool and punchTool.Parent ~= game.Workspace:FindFirstChild(playerName) then
            punchTool.Parent = game.Workspace:FindFirstChild(playerName) -- Equip the tool
        end

        -- Function to create an invisible hitbox
        local function createHitbox(name)
            local hitbox = Instance.new("Part")
            hitbox.Name = name
            hitbox.Size = Vector3.new(10, 10, 10) -- Small size, but we will teleport it
            hitbox.Transparency = 1
            hitbox.CanCollide = false
            hitbox.Anchored = true -- So we can move it anywhere
            hitbox.Parent = game.Workspace
            return hitbox
        end

        -- Create floating hitboxes
        local rightHitbox = createHitbox("RightHitbox")
        local leftHitbox = createHitbox("LeftHitbox")

        -- Kill Aura loop
        task.spawn(function()
            while _G.autoPunchanim do
                -- Trigger both punch events
                if punchTool then
                    game.Players.LocalPlayer.muscleEvent:FireServer("punch", "rightHand")
                    game.Players.LocalPlayer.muscleEvent:FireServer("punch", "leftHand")
                end

                -- Get players and exclude the local player
                local players = {}
                for _, targetPlayer in ipairs(game.Players:GetPlayers()) do
                    if targetPlayer ~= player and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
                        table.insert(players, targetPlayer)
                    end
                end

                if #players >= 2 then
                    -- Randomly pick two different players for each hand
                    local rightTarget = players[math.random(1, #players)]
                    local leftTarget = players[math.random(1, #players)]
                    -- Ensure different players for each hand
                    while rightTarget == leftTarget do
                        leftTarget = players[math.random(1, #players)]
                    end

                    -- Move hitboxes to the target's position
                    rightHitbox.CFrame = rightTarget.Character.HumanoidRootPart.CFrame
                    leftHitbox.CFrame = leftTarget.Character.HumanoidRootPart.CFrame

                    -- Fire touch event
                    firetouchinterest(rightHitbox, rightTarget.Character.HumanoidRootPart, 1) -- Right Hand touch start
                    firetouchinterest(leftHitbox, leftTarget.Character.HumanoidRootPart, 1) -- Left Hand touch start

                    task.wait(0.05)

                    firetouchinterest(rightHitbox, rightTarget.Character.HumanoidRootPart, 0) -- Right Hand touch end
                    firetouchinterest(leftHitbox, leftTarget.Character.HumanoidRootPart, 0) -- Left Hand touch end
                end

                task.wait(1) -- Wait 1 second before targeting new players
            end
        end)
    else
        _G.autoPunchanim = false -- Stop Kill Aura when switch is off
    end
end)
