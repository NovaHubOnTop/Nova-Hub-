local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library//main/Library", true))()

local window = library:AddWindow("Name GUI", {
	main_color = Color3.fromRGB(41, 74, 122), -- Color
	min_size = Vector2.new(650, 606), -- Size of the gui
	can_resize = false, -- true or false
})

local Test = window:AddTab("Test")

local test = {} -- Assuming you have a test object already
local seconds = 0
local running = false
local label = test:AddLabel("Amount of time killing players: 00:00")

local function updateTimer()
    while running do
        wait(1) -- Wait for 1 second
        seconds = seconds + 1
        local minutes = math.floor(seconds / 60)
        local remainingSeconds = seconds % 60
        label.Text = string.format("Time Spent killing players: %02d:%02d", minutes, remainingSeconds)
    end
end

local switch = test:AddSwitch("test toggle", function(bool)
    running = bool
    if running then
        seconds = 0 -- Reset timer when toggled on
        spawn(updateTimer) -- Start updating the timer
    end
end)
